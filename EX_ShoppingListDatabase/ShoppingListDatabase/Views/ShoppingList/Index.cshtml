@{
}
@model List<Product>

@if (TempData.Peek("Success") != null)
{
    @TempData["Success"];
} 

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Price.ToString("C")
                    </td>
                    <td>
                        <a asp-action="AddItem" asp-route-id="@product.ProductId" class="btn btn-primary">+ Add item to cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    Click <a asp-action="CheckOut">here</a> to check out.
</div>